<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Start Time:</strong>
  <%= @event.startTime %>
</p>

<p>
  <strong>End Time:</strong>
  <%= @event.endTime %>
</p>
<h2> Posts </h2>
<% @event.posts.each do |post| %>
<tr>
  <p><%= post.title %> </p>
             <blockquote>
               <%= post.content %>
             </blockquote>
             <p>
               <%= link_to "Show", [@calendar,@event,post] %>
             </p>

             <p>
               <%= link_to 'Destroy Post', [@calendar,@event,post],
                            method: :delete, data: { confirm: 'Are you sure?' }  %>
             </p>
    </tr>
<% end %>

<h2> Make a Post </h2>
<%= form_for([@calendar,@event, @event.posts.build]) do |f| %>
<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :content %><br>
  <%= f.text_area :content %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>

<%= link_to 'Edit', edit_calendar_event_path(@calendar,@event) %> |
<%= link_to "Back", calendar_path(@calendar) %>
<br><br>
<p>
  <%= link_to 'Destroy Event', [@calendar,@event],
               method: :delete, data: { confirm: 'Are you sure?' }  %>
</p>
